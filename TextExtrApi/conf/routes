# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Boilerpipe API
GET     /boilerpipe/                            BoilerpipeController.index
POST    /boilerpipe/extract/                    BoilerpipeController.extract


# Goose API
GET     /goose/                                 GooseController.index
POST    /goose/extract/                         GooseController.extract

# TTR API
GET     /ttr/                                 TTRController.index
POST    /ttr/extract/                         TTRController.extract

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
#*       /{controller}/{action}                  {controller}.{action}
